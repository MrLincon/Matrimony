<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorGreenLite"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_user_account"
                    app:tint="@color/colorGreen"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:hint="নাম"
                    android:textColorHint="@color/colorText"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:hint="জেলা"
                    android:textColorHint="@color/colorText"
                    android:textStyle="normal"
                    android:paddingBottom="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="12sp"></TextView>


                <TextView
                    android:id="@+id/birthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:hint="বয়স"
                    android:textColorHint="@color/colorText"
                    android:paddingBottom="8dp"
                    android:textStyle="normal"
                    android:textColor="@color/colorText"
                    android:textSize="12sp"></TextView>

                <TextView
                    android:id="@+id/occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:hint="পেশা"
                    android:textColorHint="@color/colorText"
                    android:paddingBottom="8dp"
                    android:textStyle="normal"
                    android:textColor="@color/colorText"
                    android:textSize="12sp"></TextView>

                <TextView
                    android:id="@+id/marital_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:hint="বৈবাহিক অবস্থা"
                    android:textColorHint="@color/colorText"
                    android:paddingBottom="16dp"
                    android:textStyle="normal"
                    android:textColor="@color/colorText"
                    android:textSize="12sp"></TextView>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/favourite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_heart"
            app:tint="@color/colorGreen"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"></ImageView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.cardview.widget.CardView>